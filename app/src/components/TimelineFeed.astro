---
import type { TimelineEvent, Entity } from '../lib/types';

interface Props {
  timeline: TimelineEvent[];
  entity1: Entity;
  entity2: Entity;
}

const { timeline, entity1, entity2 } = Astro.props;

// Sort events by date
const sortedTimeline = [...timeline].sort((a, b) => a.date.localeCompare(b.date));

// Helper for alignment based on entity
// Top Header Entity (Entity 1) -> Right Side in Header -> Right Aligned Feed
// Bottom Header Entity (Entity 2) -> Left Side in Header -> Left Aligned Feed
// Note: The user said "based on their position in the header". 
// In our header animation: 
// Entity 1 moves to Right.
// Entity 2 moves to Left.
// So Entity 1 events should be Right Justified.
// Entity 2 events should be Left Justified.
const getEventStyle = (eventId: string | "both") => {
  if (eventId === entity1.id) {
    return {
      align: 'self-end',
      textAlign: 'text-right',
      containerAlign: 'items-end',
    };
  } else if (eventId === entity2.id) {
    return {
      align: 'self-start',
      textAlign: 'text-left',
      containerAlign: 'items-start',
    };
  } else {
    return {
      align: 'self-center',
      textAlign: 'text-center',
      containerAlign: 'items-center',
    };
  }
};
---

<div class="relative w-full max-w-4xl mx-auto py-12 flex flex-col gap-12">
  
  {sortedTimeline.map((event) => {
    const style = getEventStyle(event.entity_id);
    const isBoth = event.entity_id === 'both';
    
    return (
      <div class={`w-full flex flex-col ${style.containerAlign}`}>
        
        <!-- Event Content Container -->
        <div class={`
          w-[85%] md:w-[70%] 
          ${style.textAlign}
        `}>
          
          <!-- Year / Date -->
          <div class="text-sm font-bold text-gray-400 mb-1 uppercase tracking-wider">
            {event.date}
          </div>

          <!-- Description -->
          <p class="text-lg md:text-xl text-gray-900 font-medium leading-relaxed">
            {event.description}
          </p>

          <!-- Quotes -->
          {event.direct_quotes && event.direct_quotes.length > 0 && (
            <div class={`mt-4 space-y-3 ${isBoth ? 'mx-auto' : ''}`}>
              {event.direct_quotes.map(quote => (
                <div class="text-gray-500 italic font-serif text-base">
                  "{quote}"
                </div>
              ))}
            </div>
          )}

        </div>
      </div>
    );
  })}
</div>
